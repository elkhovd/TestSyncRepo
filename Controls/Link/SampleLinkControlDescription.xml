<?xml version="1.0" encoding="utf-8" ?>
<!-- содержит описания контролов -->
<Controls>
  <!-- содержит описание контрола SampleLink, ResourceKey задает ключ файла ресурсов, в котором указано наименование контрола (либо задать атрибут DisplayName задает наименование контрола), которое будет отображаться в конструкторе разметок -->
  <Control Name="SampleLink" DisplayName="Sample link">
    <!-- содержит перечисление свойств контрола -->
    <Properties>
      <Property Type="Name" />
      <Property Type="Visibility" />
      <!-- DefaultValue задает значение поля по умолчанию -->
      <Property Type="StandardCssClass" DefaultValue="sample-link" />
      <Property Type="CustomCssClasses" />
      <Property Type="TabStop" />
      <Property Type="Url" />
      <Property Type="Text" />
    </Properties>
    <!-- содержит перечисление событий контрола -->
    <Events>
      <!-- событие с наименование Click, ResourceKey задает отображаемое наименование контрола(берется из файлов ресурсов по ключу ControlTypes_ClickEventProperty)
           (в данном случае ключ содержится в файле ресурсов конструктора разметок, можно увидить, добавив в Reference WebLayoutsDesigner.exe, в классе Docsvision.Platform.Tools.LayoutEditor.Resources 
           описаны ключи доступных строковых ресурсов самого WebLayoutsDesigner) -->
      <Event Name="Click" ResourceKey="ControlTypes_ClickEventProperty" />
      <Event Name="MouseOver" ResourceKey="ControlTypes_MouseOverEventProperty" />
      <Event Name="MouseOut" ResourceKey="ControlTypes_MouseOutEventProperty" />
    </Events>
  </Control>
</Controls>

